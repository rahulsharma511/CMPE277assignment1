<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/Second"
        android:layout_width="180dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:onClick="movetosecond"
        android:text="second activity"
        app:layout_constraintBottom_toTopOf="@+id/Third_Activity_Button"
        app:layout_constraintEnd_toEndOf="@+id/Third_Activity_Button"
        app:layout_constraintStart_toStartOf="@+id/Third_Activity_Button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Third_Activity_Button"
        android:layout_width="180dp"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:onClick="movetothird"
        android:text="Dialog Box"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Second" />

    <Button
        android:id="@+id/killmain"
        android:layout_width="180dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="260dp"
        android:onClick="killmain"
        android:text="Stop Main"
        app:layout_constraintBottom_toTopOf="@+id/Third_Activity_Button"
        app:layout_constraintEnd_toEndOf="@+id/Third_Activity_Button"
        app:layout_constraintStart_toStartOf="@+id/Third_Activity_Button"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="OnClick" />

    <TextView
        android:id="@+id/maincounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="149dp"
        android:layout_marginTop="65dp"
        android:text="Restart Counter = 0" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Main Activity"
        android:textSize="80px"/>



</RelativeLayout>